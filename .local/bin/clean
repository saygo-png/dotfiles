#!/bin/sh
if [ "$1" = "hard" ]; then
 dpkg -l | grep ^rc | awk '{print $2}' | xargs -t sudo apt-get -y purge
 sudo apt remove --purge "$(deborphan)"
fi
sudo apt clean
appman -c
rmw --purge=1
sudo rmw --purge=1
sudo apt autoremove
if [ "$1" = "hard" ]; then
 notify-send "hard cleaned"
 exit
fi
notify-send "cleaned"
